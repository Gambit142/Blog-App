<div>
  <%= render @user %>
</div>
<div>
  <div>List of All Posts</div>
  <% @posts.each_with_index do |post, index| %>
    <div class="comment-bio-div">
      <%= render partial: "post", locals: { post_counter: index, post: post } %>
    </div>
    <div class="comments-section border-style">
      <% post.five_recent_comments.each do |comment|%>
        <p class="d-flex"><span><%= comment.user.name %>:</span><span><%= comment.text %></span></p>
      <% end %>
    </div>
  <% end %>
  <button class="posts-btn border-style">
      <%= link_to 'Pagination', user_posts_path(@user.id) %>
    </button>
</div>